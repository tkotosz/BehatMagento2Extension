{
    "name": "bex/behat-magento2-extension",
    "type": "behat-extension",
    "description": "Magento 2 extension for Behat",
    "keywords": ["magento","magento2","tdd","bdd","behat"],
    "homepage": "https://github.com/tkotosz/BehatMagento2Extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Tibor Kotosz",
            "email": "kotosy@gmail.com",
            "homepage": "https://github.com/tkotosz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "behat/behat": "^3.8",
        "magento/framework": "^103.0",
        "symfony/event-dispatcher": "^4.4 || ^5.0",
        "symfony/dependency-injection": "^4.4 || ^5.0",
        "rogervila/array-diff-multidimensional": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "bex/behat-test-runner": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Bex\\Behat\\Magento2Extension\\": "src/Bex/Behat/Magento2Extension"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bex\\Behat\\Magento2Extension\\Acceptance\\": "features/bootstrap"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "config": {
        "allow-plugins": {
            "magento/composer-dependency-version-audit-plugin": true,
            "laminas/laminas-dependency-plugin": true
        }
    }
}
